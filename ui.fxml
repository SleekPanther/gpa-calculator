<VBox fx:controller='GpaController' fx:id='mainPane' stylesheets='css/viewCss.css' xmlns='http://javafx.com/javafx/8' xmlns:fx='http://javafx.com/fxml' ><!-- package/path to the controller -->

<!-- change to grid pane so headers line up
gridPane borders -->
		
	<GridPane fx:id='classesPane' styleClass='grid'>
		<Label text='Title (optional)' GridPane.rowIndex='0' GridPane.columnIndex='0' />
		<Label text='Grade' GridPane.rowIndex='0' GridPane.columnIndex='1' styleClass='gradeColumn'/>
		<Label text='Credits' GridPane.rowIndex='0' GridPane.columnIndex='2' styleClass='creditsColumn'/>
		<Label text='Quality Points' GridPane.rowIndex='0' GridPane.columnIndex='3' styleClass='qualityPointsColumn'/>

		<TextField fx:id='class1Title' GridPane.rowIndex='1' GridPane.columnIndex='0'/>
		<Pane GridPane.rowIndex='1' GridPane.columnIndex='1' styleClass='gradeColumn'>
			<ComboBox fx:id='class1Grade' />
		</Pane>
		<TextField fx:id='class1Credits' GridPane.rowIndex='1' GridPane.columnIndex='2' styleClass='creditsColumn'/>
		<Pane GridPane.rowIndex='1' GridPane.columnIndex='3' styleClass='qualityPointsColumn'>
			<Label fx:id='class1Points'/>
		</Pane>

		<TextField fx:id='class2Title' GridPane.rowIndex='2' GridPane.columnIndex='0'/>
		<Pane GridPane.rowIndex='2' GridPane.columnIndex='1' styleClass='gradeColumn'>
			<ComboBox fx:id='class2Grade' />
		</Pane>
		<TextField fx:id='class2Credits' GridPane.rowIndex='2' GridPane.columnIndex='2' styleClass='creditsColumn'/>
		<Pane GridPane.rowIndex='2' GridPane.columnIndex='3' styleClass='qualityPointsColumn'>
			<Label fx:id='class2Points'/>
		</Pane>
	</GridPane>

	<GridPane fx:id='existingGPA'>
		<Label text='Include Current GPA (optional)' GridPane.rowIndex='0' GridPane.columnIndex='0'/>
		<TextField fx:id='currentGPA' GridPane.rowIndex='0' GridPane.columnIndex='1'/>
		<Label fx:id='currentGPAError' styleClass='errorLabel' GridPane.rowIndex='0' GridPane.columnIndex='2'/>

		<Label text='Current Credits (optional)' GridPane.rowIndex='1' GridPane.columnIndex='0'/>
		<TextField fx:id='currentCredits' GridPane.rowIndex='1' GridPane.columnIndex='1'/>
		<Label fx:id='currentCreditsError' styleClass='errorLabel' GridPane.rowIndex='1' GridPane.columnIndex='2'/>
	</GridPane>

	<HBox fx:id='calcPane'>
		<!-- <Label text='GPA:' fx:id='gpaLabel'/>
		<Label text='0.0' fx:id='gpa' /> -->
		<!-- <Button text='Calculate Overall GPA' fx:id='calcGpaOverallButton' styleClass='buttons' onAction='#handleCalcGpaOverallButton' /> -->
		<Label text='GPA:' fx:id='gpaLabel'/>
		<Label text='0.0' fx:id='gpaOverall' />
	</HBox>
	
	<Button text='Reset' fx:id='resetButton' styleClass='buttons' onAction='#handleResetButton' />

</VBox>